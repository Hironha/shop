{% import "./components/icons.j2" as icons %}
{% import "./components/form.j2" as form %}

<form method="dialog">
  <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2 focus-visible:outline-none">
    {% call icons::xmark() %}
  </button>
</form>

<h3 class="text-lg font-bold">Novo adicional</h3>
<form name="update_extra_form" class="flex flex-col gap-4" enctype="application/x-www-form-urlencoded"
  hx-put="/dashboard/extras/{{ extra.id }}">
  {% call form::fields(name = extra.name, price = extra.price) %}

  <div class="flex items-center justify-between gap-4 mt-3">
    <button type="button" class="btn" onclick="update_extra_modal.close()">Cancelar</button>
    <button type="submit" class="btn btn-primary">Confirmar</button>
  </div>
</form>