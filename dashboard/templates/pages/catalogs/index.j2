{% extends "bases/auth.j2" %}

{% block title %}Catálogos{% endblock title %}

{% block content %}
<div class="flex flex-col gap-6">
  <div class="breadcrumbs text-sm">
    <ul>
      <li>Dashboard</li>
      <li>Catálogos</li>
    </ul>
  </div>

  <section class="flex flex-col gap-2">
    <h1 class="text-2xl">Catálogos</h1>
  </section>

  <main>
    {% include "./table.j2" %}
  </main>
</div>
{% endblock content %}

{% block scripts %}
<script>
  document.querySelectorAll("td[data-date]")?.forEach(el => {
    el.textContent = new Date(el.getAttribute("data-date")).toLocaleDateString('pt-br');
  });
</script>
{% endblock scripts %}